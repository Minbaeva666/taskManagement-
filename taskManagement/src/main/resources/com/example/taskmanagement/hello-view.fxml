<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanagement.HelloController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Task Management System">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <RadioButton fx:id="homeworkRadio" layoutX="14.0" layoutY="54.0" text="Homework Task" />
        <RadioButton fx:id="meetingRadio" layoutX="14.0" layoutY="84.0" text="Meeting Task" />
        <RadioButton fx:id="shoppingRadio" layoutX="14.0" layoutY="114.0" text="Shopping Task" />
        <TextField fx:id="taskNameField" layoutX="180.0" layoutY="54.0" promptText="Task Name" />
        <TextField fx:id="taskDescriptionField" layoutX="180.0" layoutY="84.0" promptText="Task Description" />
        <Button layoutX="14.0" layoutY="144.0" mnemonicParsing="false" onAction="#addTask" text="Add Task" />
        <ListView fx:id="listView" layoutX="14.0" layoutY="174.0" prefHeight="192.0" prefWidth="572.0" />
        <Button layoutX="14.0" layoutY="376.0" mnemonicParsing="false" onAction="#markAsComplete" text="Mark as Complete" />
    </children>
</AnchorPane>
